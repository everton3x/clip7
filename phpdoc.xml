<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
	<title>CLIP :: Command Line Tool for PHP</title>
    <parser>
        <default-package-name>CLIP</default-package-name>
        <target>output/build/doc</target>
        <extensions>
            <extension>php</extension>
        </extensions>
        <!-- <files>
            <directory>src</directory>
        </files> -->
    </parser>
    <transformer>
        <target>doc</target>
    </transformer>
    <transformations>
        <template name="clean" />
    </transformations>
	<files>
		<directory>src</directory>
	</files>
</phpdocumentor>
